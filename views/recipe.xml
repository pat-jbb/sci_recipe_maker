<?xml version="1.0"?>
<odoo>

    <menuitem
            id="menu_recipe_main"
            name="Recipe"
            parent="website.menu_website_configuration"
            sequence="4"/>

    <!-- RECIPE VIEW IN BLOG FORM -->
    <record model='ir.ui.view' id='recipe_recipe_form'>
        <field name="name">blog.post.inherited.form</field>
        <field name="model">recipe.recipe</field>
        <field name="inherit_id" ref="website_blog.view_blog_post_form<"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='website_id']" position="after">
                <field name="is_recipe"/>
            </xpath>
            <xpath expr="//group[1]" position="after">
                <notebook attrs="{'invisible': [('is_recipe', '=', False)]}">
                    <page string="Recipe Details" name="recipe_details">
                        <group>
                            <group>
                                <field name="image_medium" widget="image" class="oe_avatar"/>
                                <!--                                <field name="recipe_name"/>-->
                                <field name="summary"/>
                                <field name="servings"/>
                                <field name="servings_type"/>
                                <field name="calories"/>
                                <group>
                                    <group>
                                        <field name="prep_time"/>
                                    </group>
                                    <group>
                                        <field name="cook_time"/>
                                    </group>
                                    <group>
                                        <field name="total_time"/>
                                    </group>
                                </group>
                                <group>
                                    <group>
                                        <field name="course_ids"/>
                                    </group>
                                    <group>
                                        <field name="cuisine_ids"/>
                                    </group>
                                </group>
                            </group>
                        </group>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>

<!--    <menuitem action="action_faq_faq" id="menu_faq_faq" name="FAQ" parent="menu_faq" sequence="1"/>-->

</odoo>